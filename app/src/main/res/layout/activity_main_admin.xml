<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBackround"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".MainAdmin">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="151dp"
        android:src="@drawable/main"/>

    <Button
        android:id="@+id/add_doctor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Doctor"
        />

    <Button
        android:id="@+id/add_hospital"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add hospital"
        />

    <Button
        android:id="@+id/add_pharmacy"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Pharmacy"
        />

    <Button
        android:id="@+id/add_illness"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add illness *"
        />

    <Button
        android:id="@+id/add_medicine"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add medicine *"
        />

</LinearLayout>