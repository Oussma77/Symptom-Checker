<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/MainBackround"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/hospital" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="NAME Family"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#2B3D4D" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_schedule_black_24" />

            <TextView
                android:id="@+id/time_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="08:00 - 16:00"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#2B3D4D"
                android:textSize="16dp" />


        </LinearLayout>
        <!--*************************************************-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_call_black_24" />

            <TextView
                android:id="@+id/phone_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="+78888888888"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#2B3D4D"
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_room_black_24" />

            <TextView
                android:id="@+id/address_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="Ulitsa Moskovskaya 7"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#2B3D4D"
                android:textSize="16dp" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>